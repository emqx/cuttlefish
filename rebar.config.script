case os:getenv("CUTTLEFISH_ESCRIPT") =:= "true" of
    true ->
        %% building escript, delete the post hook
        {_, PostHooks0} = lists:keyfind(post_hooks, 1, CONFIG),
        PostHooks = lists:keydelete(app_compile, 1, PostHooks0),
        lists:keystore(post_hooks, 1, CONFIG, {post_hooks, PostHooks});
    false ->
        CONFIG
end.

